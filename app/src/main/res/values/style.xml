<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonCalc">
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="android:layout_width">@dimen/defaultButton</item>
        <item name="android:layout_height">@dimen/defaultButton</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">@dimen/buttonSize</item>
        <item name="backgroundTint">@color/green</item>
        <item name="fontFamily">@font/animeace2_ital</item>
    </style>

    <style name="ButtonCalcAction" parent="ButtonCalc">
        <item name="backgroundTint">@color/purple_200</item>
    </style>

    <style name="ButtonResult" parent="ButtonCalc">
        <item name="android:layout_width">@dimen/widthButtonResult</item>
        <item name="android:layout_height">@dimen/defaultButton</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_margin">@dimen/MarginResultButton</item>
        <item name="android:backgroundTint">#cc0000</item>
    </style>


</resources>